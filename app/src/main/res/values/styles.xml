<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.TitleHeaderStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="AppTheme.TextStyle" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>

    </style>

</resources>